{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "src/@types"],
    "paths": {
      "@/*": ["./src/*"],
      "@/public/*": ["./public/*"],
      "@/components/*": ["components/*"],
      "@/graphql/*": ["graphql/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.graphql", "**/*.ts", "**/*.tsx", "pages/index.tsx", "libs/shopify/storefront.ts", "pages/products/[handle].tsx", "redux/slice.ts"],
  "exclude": ["node_modules"]
}
